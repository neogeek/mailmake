{
  "name": "mailmake",
  "description": "Generate RFC1521 valid mime files for use with Mailgun and other similar services.",
  "version": "1.0.8",
  "engines": {
    "node": ">=4.0"
  },
  "bin": "./bin/mailmake",
  "main": "./lib/mailmake.js",
  "license": "MIT",
  "dependencies": {
    "chalk": "2.3.0",
    "markdown-it": "8.4.0",
    "parse-cmd-args": "2.0.0",
    "update-notifier": "2.4.0"
  },
  "devDependencies": {
    "@neogeek/eslint-config-standards": "^2.0.0",
    "codecov": "^2.3.0",
    "doxdox": "^2.0.3",
    "eslint": "^4.5.0",
    "istanbul": "^0.4.5",
    "mocha": "^4.0.1"
  },
  "scripts": {
    "test": "npm run lint && mocha test/specs/",
    "test:docs": "doxdox lib/mailmake.js --layout templates/README.hbs | diff README.md -",
    "lint": "eslint .",
    "coverage": "istanbul cover _mocha test/specs/ && codecov",
    "docs": "doxdox lib/mailmake.js --layout templates/README.hbs --output README.md"
  },
  "keywords": [
    "mime",
    "mail",
    "mailgun",
    "markdown"
  ],
  "authors": [
    {
      "name": "Scott Doxey",
      "email": "hello@scottdoxey.com",
      "homepage": "http://scottdoxey.com/"
    }
  ],
  "homepage": "https://github.com/neogeek/mailmake",
  "repository": {
    "type": "git",
    "url": "git://github.com/neogeek/mailmake.git"
  }
}
